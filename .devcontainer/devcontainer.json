{
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  "extensions": [
    "Iterative.dvc",
    "ms-python.python",
    "redhat.vscode-yaml"
  ],

  "containerEnv": {
    "FLYCTL_INSTALL": "/home/vscode/.fly",
    "PATH": "/home/vscode/.fly/bin:/home/vscode/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
  },
  "postCreateCommand": "bash -lc 'export PIP_REQUIRE_HASHES=0 && pip install --upgrade pip && pip install --user --no-cache-dir -r requirements.txt'"

}
